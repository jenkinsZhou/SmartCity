<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tourcool.library.frame">

    <!--<uses-feature android:name="android.hardware.screen.portrait"/>-->

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- AgentWeb 是默认启动定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>


    <application
        android:name="com.tourcool.core.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 配置APP渠道号 -->
        <meta-data
            android:name="BUGLY_APPID"
            android:value="${bugly_id}" />
        <meta-data
            android:name="BUGLY_APP_CHANNEL"
            android:value="${app_channel}" />
        <meta-data
            android:name="BaiduMobAd_CHANNEL"
            android:value="${app_channel}"/>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths_public"></meta-data>
        </provider>
        <!--蒲公英Start-->
        <provider
            android:name="com.pgyersdk.PgyerProvider"
            android:authorities="${applicationId}.com.pgyer.provider"
            android:exported="false"/>
        <!-- 必填 -->
        <meta-data
            android:name="PGYER_APPID"
            android:value="${PGYER_ID}">
        </meta-data>
        <activity
            android:name="com.tourcool.core.module.SplashActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tourcool.core.module.main.MainTabActivity"
            android:launchMode="singleTop"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"/>
        <!-- 应用内浏览器 -->
        <activity
            android:name="com.tourcool.core.module.WebViewActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:label="@string/fast_loading"/>
        <activity
            android:name="com.tourcool.core.module.WebAppActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:label="@string/fast_loading"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.TitleWithEditTextActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="Title+底部输入框测试"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.ToastActivity"
            android:label="ToastUtil工具类示例"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.SingleFragmentActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="Activity直接嵌套Fragment懒加载效果"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.SwipeBackActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="微信滑动返回样式效果"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.QQTitleActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="QQ默认主题TitleBar背景渐变"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.ali.ALiPayMainActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="支付宝主界面效果"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.news.NewsMainActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="腾讯新闻主界面效果"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.TestStatusActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="@string/test_status"/>
        <activity
            android:name="com.tourcool.core.module.main.sample.FrameViewActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="模拟快速下拉刷新及TitleBarView统一设置"/>
        <activity
            android:name="com.tourcool.core.module.mine.SettingActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="@string/setting"/>
        <activity
            android:name="com.tourcool.core.module.mine.ThirdLibraryActivity"
            android:configChanges="locale|layoutDirection|mcc|mnc"
            android:label="@string/third_part"/>
        <activity android:name="com.tourcool.core.module.activity.MessageListActivity1" />
        <activity android:name="com.tourcool.ui.mvp.MessageListActivity" />
    </application>

</manifest>