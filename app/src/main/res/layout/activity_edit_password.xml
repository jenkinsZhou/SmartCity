<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF5F5F5"
    android:orientation="vertical">

    <include layout="@layout/frame_layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/bg_radius_10_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/llEditPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/Text14spBlack333333"
                    android:layout_gravity="center_vertical"
                    android:text="手机号"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:paddingTop="@dimen/dp_16"
                    android:maxLength="11"
                    android:paddingBottom="@dimen/dp_16"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />


            <LinearLayout
                android:id="@+id/llClearCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/Text14spBlack333333"
                    android:layout_gravity="center_vertical"
                    android:text="验证码"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/etVcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tvGetCode"
                    style="@style/Text14spBlack333333"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:minWidth="@dimen/dp_80"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="发送验证码"
                    android:textColor="@color/blue5593FF"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

            <LinearLayout
                android:id="@+id/llLoginPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text14spBlack333333"
                    android:layout_gravity="center_vertical"
                    android:text="密码"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/etNewPass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入新密码"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

            <LinearLayout
                android:id="@+id/llNewPassConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text14spBlack333333"
                    android:layout_gravity="center_vertical"
                    android:text="确认密码"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/etPasswordConfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请确认新密码"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_blue_5593ff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="@dimen/dp_48"
            android:text="确认"
            android:textColor="@color/whiteCommon"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


</LinearLayout>