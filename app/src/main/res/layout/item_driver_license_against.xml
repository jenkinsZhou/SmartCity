<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_radius_10_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAgainstDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#5593FF"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvHandleResult"
            style="@style/Text13spBlack333333"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            style="@style/Text13spBlack333333"
            android:text="违章地址"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvAgainstLocate"
            style="@style/Text13spGrayA2A2A2"
            android:layout_marginStart="@dimen/dp_10"
         />
    </LinearLayout>

    <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            style="@style/Text13spBlack333333"
            android:text="违章城市"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvAgainstCity"
            style="@style/Text13spGrayA2A2A2"
            android:layout_marginStart="@dimen/dp_10"
          />
    </LinearLayout>

    <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            style="@style/Text13spBlack333333"
            android:text="违章处理部门"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvAgainstHandleDept"
            style="@style/Text13spGrayA2A2A2"
            android:layout_marginStart="@dimen/dp_10"
         />
    </LinearLayout>

    <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            style="@style/Text13spBlack333333"
            android:text="罚款原因"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvAgainstReason"
            style="@style/Text13spGrayA2A2A2"
            android:layout_marginStart="@dimen/dp_10"
          />
    </LinearLayout>

    <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAgainstScore"
            style="@style/Text13spBlack333333"
            android:textColor="#E54E3F"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tvAgainstMoney"
            style="@style/Text13spBlack333333"
            android:layout_marginStart="@dimen/dp_60"
            android:textColor="#E54E3F"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>