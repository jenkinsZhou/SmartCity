<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteCommon">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_bg_mine"
                android:orientation="vertical">

                <include layout="@layout/frame_layout_title_bar" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivScanIdZheng"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_scan_idcard_zheng" />

                        <ImageView
                            android:id="@+id/ivScanIdFan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_scan_idcard_fan" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <!-- <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/rvCommon"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_300"
                 android:layout_marginTop="@dimen/dp_220"
                 android:background="@drawable/bg_top_radius_15_white" />-->



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_top_radius_15_white"
                    android:minHeight="@dimen/dp_300"
                    android:layout_marginTop="@dimen/dp_220"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        style="@style/Text14spBlue5593FF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:layout_marginBottom="@dimen/dp_19"
                        android:text="身份证正面" />

                    <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

                    <!--姓名-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名" />

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>
                    <!--性别-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别" />

                        <TextView
                            android:id="@+id/tvGender"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>

                    <!--民族-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="民族" />

                        <TextView
                            android:id="@+id/tvEthnic"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>

                    <!--出生-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出生" />

                        <TextView
                            android:id="@+id/tvBirthday"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>

                    <!--住址-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="住址" />

                        <TextView
                            android:id="@+id/tvAddress"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>

                    <!--公民身份证号码-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公民身份证号码" />

                        <TextView
                            android:id="@+id/tvIdNumber"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>


                    <View
                        android:background="@color/grayF5F5F5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"/>
                    <TextView
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        style="@style/Text14spBlue5593FF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:layout_marginBottom="@dimen/dp_19"
                        android:text="身份证反面" />

                     <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp"/>

                    <!--签发机关-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签发机关" />

                        <TextView
                            android:id="@+id/tvAuthority"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>

                    <!--有效日期-->
                    <LinearLayout
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_28"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text14spBlack333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有效日期" />

                        <TextView
                            android:id="@+id/tvValidDate"
                            style="@style/Text14spGrayA2A2A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="  " />
                    </LinearLayout>



                </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>