<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:text="今日日期 " />

            <TextView
                android:id="@+id/tvDateDay"
                style="@style/Text13spBlack333333"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:text=" "
                android:textColor="#629BFF" />

            <TextView
                style="@style/Text13spBlack333333"
                android:text="幸运数字" />

            <TextView
                android:id="@+id/tvLuckyNum"
                style="@style/Text13spBlack333333"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:textColor="#629BFF" />
        </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:text="幸运颜色" />

            <TextView
                android:id="@+id/tvLuckyColor"
                style="@style/Text13spBlack333333"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:textColor="#629BFF" />

            <TextView
                style="@style/Text13spBlack333333"
                android:text="速配星座" />

            <TextView
                android:id="@+id/tvMatchStarName"
                style="@style/Text13spBlack333333"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:textColor="#629BFF" />
        </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:text="综合指数" />

            <ProgressBar
                android:id="@+id/allPercentPb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable" />

            <TextView
                android:id="@+id/tvProgressAll"
                style="@style/Text13spBlack333333"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="#629BFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:text="健康指数" />

            <ProgressBar
                android:id="@+id/healthPb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable" />

            <TextView
                android:id="@+id/tvProgressHealthy"
                style="@style/Text13spBlack333333"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="#629BFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:text="爱情指数" />

            <ProgressBar
                android:id="@+id/lovePb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable" />

            <TextView
                android:id="@+id/tvProgressLove"
                style="@style/Text13spBlack333333"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="#629BFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:text="工作指数" />

            <ProgressBar
                android:id="@+id/workPb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable" />

            <TextView
                android:id="@+id/tvProgressWork"
                style="@style/Text13spBlack333333"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="#629BFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/Text13spBlack333333"
                android:text="财运指数" />

            <ProgressBar
                android:id="@+id/moneyPb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable" />

            <TextView
                android:id="@+id/tvProgressMoney"
                style="@style/Text13spBlack333333"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="#629BFF" />
        </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_19"
            style="@style/Text13spBlack333333"
            android:text="今日概述" />

        <TextView
            android:id="@+id/tvTodayDesc"
            style="@style/Text13spBlack333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="有些思考的小漩涡，可能让你忽然的放空，生活中许多的细节让你感触良多，五味杂陈，常常有时候就慢动作定格，想法在某处冻结停留，陷入一阵自我对话的沉思之中，这个时"
            android:textColor="@color/grayA2A2A2" />
        </LinearLayout>
</androidx.core.widget.NestedScrollView>

</LinearLayout>