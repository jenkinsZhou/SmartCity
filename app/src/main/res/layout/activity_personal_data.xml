<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grayF5F5F5"
    android:layout_height="match_parent">
    <include layout="@layout/frame_layout_title_bar" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:background="@drawable/bg_radius_10_white"
            android:layout_margin="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llEditPhone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="头像"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/Text14spBlack333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:src="@mipmap/ic_shape_face"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38"/>
            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp"/>



            <LinearLayout
                android:id="@+id/llClearCache"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="验证码"
                    style="@style/Text14spBlack333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvNickName"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:gravity="right"
                    android:text="微信用户"
                    android:textColor="@color/grayAAAAAA"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvConfirm"
        android:minHeight="@dimen/dp_48"
        android:textColor="@color/whiteCommon"
        android:text="保存"
        android:textSize="@dimen/sp_16"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:background="@drawable/selector_blue_5593ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>