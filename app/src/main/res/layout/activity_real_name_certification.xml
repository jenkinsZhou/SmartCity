<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteCommon"
   >

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_bg_mine"
        android:orientation="vertical">
        <include layout="@layout/frame_layout_title_bar" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/ic_card" />



    </LinearLayout>


    <!--实名认证区域-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_184"
        android:background="@drawable/bg_top_radius_15_white"
        android:orientation="vertical">

        <!--lv1认证-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_lv1" />
            </LinearLayout>


            <TextView
                style="@style/TextBold14spBlack333333"
                android:text="级认证"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="normal"
                />
            <TextView
                style="@style/Text11spGraya2a2a2"
                android:text="可享某某服务内容"
                android:layout_gravity="center_vertical"
                android:textStyle="normal"
                />
        </LinearLayout>

        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_height="@dimen/dp_0_5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="@dimen/dp_48"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_shape_phone" />
            </LinearLayout>
            <TextView
                style="@style/TextBold14spBlack333333"
                android:text="手机号＋短信认证"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已认证"
                android:letterSpacing="0.1"
                android:layout_gravity="center_vertical"
                android:textStyle="normal"
                android:textColor="#5593FF"

                />
        </LinearLayout>


        <View
            android:background="@color/grayF5F5F5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

        <!--lv2认证-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_lv2" />
            </LinearLayout>


            <TextView
                style="@style/TextBold14spBlack333333"
                android:text="级认证"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="normal"
                />
            <TextView
                style="@style/Text11spGraya2a2a2"
                android:text="可享某某服务内容"
                android:layout_gravity="center_vertical"
                android:textStyle="normal"
                />
        </LinearLayout>

        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_height="@dimen/dp_0_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            >
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_shape_rect" />
            </LinearLayout>
            <TextView
                style="@style/TextBold14spBlack333333"
                android:text="姓名＋身份证认证"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/tvlevle2"
                style="@style/Text11spGraya2a2a2"
                android:text="未认证"
                android:letterSpacing="0.1"
                android:layout_gravity="center_vertical"
                android:textStyle="normal"
                android:textSize="@dimen/sp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:background="@drawable/bg_gradient_radius_25_blue_4287ff"
                android:textColor="@color/whiteCommon"

                />
        </LinearLayout>


        <View
            android:background="@color/grayF5F5F5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

        <!--lv3认证-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_lv3" />
            </LinearLayout>
            <TextView
                style="@style/TextBold14spBlack333333"
                android:text="级认证"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="normal"
                />
            <TextView
                style="@style/Text11spGraya2a2a2"
                android:text="可享某某服务内容"
                android:layout_gravity="center_vertical"
                android:textStyle="normal"
                />
        </LinearLayout>
        <!--分割线-->
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_height="@dimen/dp_0_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"

            >

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_bank_card" />
            </LinearLayout>
            <TextView
                style="@style/TextBold14spBlack333333"
                android:text="银行卡认证"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="normal"
                />
            <TextView
                style="@style/Text11spGraya2a2a2"
                android:text="未认证"
                android:layout_gravity="center_vertical"
                android:textStyle="normal"
                android:letterSpacing="0.1"
                android:textSize="@dimen/sp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:background="@drawable/bg_gradient_radius_25_blue_4287ff"
                android:textColor="@color/whiteCommon"

                />

        </LinearLayout>

        <!--分割线-->
        <View
            android:background="@color/grayE0E0E0"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_height="@dimen/dp_0_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            >
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_shape_face" />
            </LinearLayout>
            <TextView
                style="@style/TextBold14spBlack333333"
                android:text="人脸识别认证"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="normal"
                />
            <TextView
                style="@style/Text11spGraya2a2a2"
                android:text="未认证"
                android:layout_gravity="center_vertical"
                android:textStyle="normal"
                android:letterSpacing="0.1"
                android:textSize="@dimen/sp_12"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:background="@drawable/bg_gradient_radius_25_blue_4287ff"
                android:textColor="@color/whiteCommon"

                />




        </LinearLayout>

        <!--分割线-->
        <View
            android:background="@color/grayF5F5F5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

    </LinearLayout>






    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
</RelativeLayout>
