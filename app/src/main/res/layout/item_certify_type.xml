<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_15"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/bg_radius_10_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25">


        <ImageView
            android:id="@+id/ivCertifyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_certify_ali" />

        <TextView
            android:id="@+id/tvCertifyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:text="支付宝账号认证" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivHasCertify"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_certify_finish"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>