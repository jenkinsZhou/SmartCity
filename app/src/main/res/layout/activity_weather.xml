<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/ic_bg_home"
    android:layout_height="match_parent">
    <include layout="@layout/frame_layout_title_bar" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_35"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="宜兴市"
            android:layout_gravity="center_horizontal"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            style="@style/Text18spWhiteFFFFFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                style="@style/Text14spWhiteFFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="08/26" />

            <TextView
                style="@style/Text14spWhiteFFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="29°～37°" />

            <TextView
                style="@style/Text14spWhiteFFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="多云" />
        </LinearLayout>

        <!--第三行空气质量区域-->

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <LinearLayout
                android:id="@+id/llTemperature"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="50sp"
                    android:text="38°"
                    android:includeFontPadding="false"
                    android:textColor="@color/whiteCommon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAir"
                android:layout_alignBaseline="@id/llTemperature"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="空气质量：良"
                    style="@style/Text12spWhiteFFFFFF"
                    />

                <TextView
                    android:text="东风：3-6级"
                    android:layout_marginTop="@dimen/dp_15"
                    style="@style/Text12spWhiteFFFFFF"/>

            </LinearLayout>

            <!--天气图标-->
            <LinearLayout
                android:layout_alignBaseline="@id/llTemperature"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:src="@mipmap/ic_test"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/dp_50"/>
            </LinearLayout>
        </RelativeLayout>
<!--分割线-->
        <View
            android:background="@color/whiteCommon"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <androidx.recyclerview.widget.RecyclerView
            android:minHeight="@dimen/dp_300"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@color/blue4287FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </LinearLayout>

</LinearLayout>