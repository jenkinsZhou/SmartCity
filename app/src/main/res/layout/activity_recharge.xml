<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grayF5F5F5"
    android:layout_height="match_parent">
    <include layout="@layout/frame_layout_title_bar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_margin="@dimen/dp_15"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:paddingStart="@dimen/dp_7"
            android:paddingEnd="@dimen/dp_7"
            android:background="@drawable/bg_radius_10_white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_13"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etPhone"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@null"
                    android:padding="@dimen/dp_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/llSelectContact"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/vector_drawable_ic_contact"
                        android:layout_width="@dimen/dp_21"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/dp_21"/>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grayEEEEEE">

            </View>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rechargeRecyclerView"
                android:layout_width="match_parent"
                android:minHeight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>





        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirm"
        android:minHeight="@dimen/dp_48"
        android:textColor="@color/whiteCommon"
        android:text="立即充值"
        android:textSize="@dimen/sp_16"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:background="@drawable/selector_blue_5593ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>