<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grayF7F4F8"
    android:layout_height="match_parent">
    <include layout="@layout/frame_layout_title_bar" />
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:id="@+id/smartRefreshCommon"
    android:paddingTop="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:minHeight="@dimen/dp_600"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:minHeight="@dimen/dp_500"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCommon"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/dp_300"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvPayParkingFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:background="@drawable/bg_radius_25_blue_00b4ff"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:text="缴费"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>