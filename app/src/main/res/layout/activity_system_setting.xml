<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grayF5F5F5"
    android:layout_height="match_parent">
    <include layout="@layout/frame_layout_title_bar" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:background="@drawable/bg_radius_10_white"
        android:layout_margin="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llEditPhone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="修改密码"
            android:textSize="@dimen/sp_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/icon_arrow_right"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_19"
            android:paddingBottom="@dimen/dp_19"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp"/>

        <LinearLayout
            android:id="@+id/llBindPhone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="绑定手机"
                android:textSize="@dimen/sp_14"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBindPhone"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@mipmap/icon_arrow_right"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_19"
                android:paddingBottom="@dimen/dp_19"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <include layout="@layout/line_horizontal_gray_eeeeee_0_5_dp"/>

        <LinearLayout
            android:id="@+id/llClearCache"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="清除缓存"
                android:textSize="@dimen/sp_14"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvCacheSize"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@mipmap/icon_arrow_right"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_19"
                android:paddingBottom="@dimen/dp_19"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvLogout"
        android:minHeight="@dimen/dp_48"
        android:textColor="@color/whiteCommon"
        android:text="退出登录"
        android:textSize="@dimen/sp_16"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:background="@drawable/selector_blue_5593ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>