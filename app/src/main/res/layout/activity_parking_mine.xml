<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/frame_layout_title_bar" />


    <RelativeLayout
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/img_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/ivAvatar"
                android:src="@mipmap/img_default_avatar"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_57"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_14"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvNickName"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="--" />

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="--" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llMyCar"
        android:paddingTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@mipmap/icon_my_car"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="left"
            android:text="我的车辆" />
        <ImageView
            android:src="@mipmap/icon_more"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="@color/grayD2D3D5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>

    <LinearLayout
        android:id="@+id/llPayParkingFee"
        android:paddingTop="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@mipmap/icon_pay"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="left"
            android:text="欠费缴纳" />
        <ImageView
            android:src="@mipmap/icon_more"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="@color/grayD2D3D5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llFindParking"
        android:paddingTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@mipmap/icon_hunt_parking"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="left"
            android:text="找车位" />
        <ImageView
            android:src="@mipmap/icon_more"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="@color/grayD2D3D5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</LinearLayout>