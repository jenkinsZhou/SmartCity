<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llParkingInfo"
    android:background="@color/grayF7F4F8"
    android:orientation="horizontal">


    <CheckBox
        android:id="@+id/cBoxParkingRecord"
        style="@style/CheckBoxThemeSelectCar"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_12"
        android:checked="false"
        android:focusable="false"
        android:clickable="false"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_radius_20_white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_17">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvParkingLocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/icon_location"
                android:drawablePadding="@dimen/dp_7"
                android:text="宜兴市火车站 地下停车场"
                android:textColor="@color/gray444444"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tvParkingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableStart="@mipmap/icon_time"
                android:drawablePadding="@dimen/dp_7"
                android:text="停车 1小时13分"
                android:textColor="@color/gray444444"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:text="¥"
                android:textColor="@color/redF20101"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tvPayAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="15"
                android:textColor="@color/redF20101"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>