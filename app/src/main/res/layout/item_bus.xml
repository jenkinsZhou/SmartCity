<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    android:background="@drawable/bg_radius_10_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_12"
    android:paddingTop="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        style="@style/Text13spBlack333333"
        android:text="1路"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStationStart"
            style="@style/Text13spBlack333333"
            android:text="南站" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:src="@mipmap/ic_arrow_blue_long" />

        <TextView
            android:id="@+id/tvStationEnd"
            style="@style/Text13spBlack333333"
            android:text="北站" />

        <TextView
            android:id="@+id/tvBusinessTime"
            style="@style/Text13spBlack333333"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="end"
            android:text="运营时间：9:00-18:00" />

    </LinearLayout>
</LinearLayout>