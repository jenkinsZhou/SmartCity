<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--targetSdk设置成27及以上如果Activity有设置屏幕横竖屏操作会造成应用崩溃 Only fullscreen activities can request orientation -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="SupperTextStyleItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="sLeftViewMarginLeft">6dp</item>
        <item name="sLeftIconHeight">24dp</item>
        <item name="sLeftIconWidth">24dp</item>
        <item name="sLeftTextSize">16dp</item>
        <item name="sDividerLineColor">@color/colorLineGray</item>
        <item name="sDividerLineType">bottom</item>
        <item name="sLeftTextColor">@color/colorTextBlack</item>
        <item name="sRightIconRes">@drawable/ic_arrow_right</item>
        <item name="sRightTextColor">@color/colorTextGray</item>
        <item name="sRightTextSize">14dp</item>
    </style>

    <style name="TextStyleMovieItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_toRightOf">@id/iv_coverMovie</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/colorTextBlackLight</item>
        <item name="android:textSize">12dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!--item根布局样式-->
    <style name="RadiusViewItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:translationZ" tools:targetApi="lollipop">@dimen/dp_elevation</item>
        <item name="android:outlineProvider" tools:targetApi="lollipop">background</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_elevation</item>
        <item name="android:layout_marginLeft">@dimen/dp_margin_item</item>
        <item name="android:layout_marginTop">@dimen/dp_margin_item</item>
        <item name="android:layout_marginRight">@dimen/dp_margin_item</item>
        <item name="rv_rippleEnable">true</item>
        <item name="rv_backgroundColor">@color/colorWhite</item>
        <item name="rv_backgroundPressedColor">@color/colorWhitePressed</item>
        <item name="rv_radius">@dimen/dp_radius</item>
    </style>

    <style name="RadiusTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_elevation</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textSize">14dp</item>
        <item name="rv_radius">@dimen/dp_radius</item>
        <item name="rv_backgroundColor">@color/colorWhite</item>
        <item name="rv_backgroundPressedColor">@color/colorWhitePressed</item>
        <item name="rv_strokeColor">@color/colorLineGray</item>
        <item name="rv_strokeWidth">@dimen/dp_line_size</item>
    </style>


